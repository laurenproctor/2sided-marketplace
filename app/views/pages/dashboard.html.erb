<div class="row">
<h1 class="text-center">Dashboard</h1>
	<div class="col-md-4">
		<h3 class="text-center">My Books <%= link_to "New Book", new_book_path, class: "btn btn-primary btn-small" %></h3>
		<table class="table table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Book Name</th>
          <th>Available</th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <th scope="row"><%= book.id %></th>
          <td><%= book.name %></td>
          <td><%= book.availability %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
        </tr>
       <% end %>
      </tbody>
    </table>
	</div>
	<div class="col-md-4">
		<h3 class="text-center">My Purchases</h3>
	</div>
	<div class="col-md-4">
		<h3 class="text-center">My Sales</h3>
	</div>

</div>